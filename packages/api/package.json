{
  "name": "@repo/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:hocuspocus": "node dist/hocuspocus.js",
    "dev:hocuspocus": "tsx watch src/hocuspocus.ts",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts"
  },
  "dependencies": {
    "@repo/shared": "workspace:*",
    "fastify": "^5.0.0",
    "@fastify/cors": "^11.0.0",
    "@fastify/sensible": "^6.0.0",
    "@fastify/multipart": "^9.0.0",
    "fastify-plugin": "^5.0.0",
    "fastify-type-provider-zod": "^6.0.0",
    "drizzle-orm": "^0.41.0",
    "postgres": "^3.4.0",
    "zod": "^4.0.0",
    "better-auth": "^1.4.0",
    "@aws-sdk/client-s3": "^3.700.0",
    "@aws-sdk/s3-request-presigner": "^3.700.0",
    "bullmq": "^5.60.0",
    "ioredis": "^5.4.0",
    "dotenv": "^16.4.0",
    "pino-pretty": "^13.0.0",
    "@fastify/websocket": "^11.0.0",
    "@fastify/swagger": "^9.0.0",
    "@fastify/swagger-ui": "^5.0.0",
    "ai": "^4.0.0",
    "@ai-sdk/openai": "^1.0.0",
    "@ai-sdk/anthropic": "^1.0.0",
    "ollama-ai-provider": "^1.0.0",
    "@hocuspocus/server": "^2.13.0",
    "@hocuspocus/extension-database": "^2.13.0",
    "@hocuspocus/extension-redis": "^2.13.0",
    "@hocuspocus/extension-logger": "^2.13.0",
    "yjs": "^13.6.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "drizzle-kit": "^0.31.4",
    "@types/node": "^22.0.0"
  }
}
